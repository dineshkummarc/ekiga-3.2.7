	src/main_window.cpp, src/main_window.h, src/menu.cpp, src/menu.h,
	src/misc.cpp, src/misc.h, src/pref_window.cpp, src/pref_window.h,
	src/sound_handling.cpp, src/sound_handling.h, src/toolbar.cpp,
